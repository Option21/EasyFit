<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/ChronoLayout"

    tools:context="com.example.zionlion.chrono.Chrono">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:textSize="70sp"
        android:format="%s"
        android:gravity="center"
        android:text="00:00:00:000:00"
        android:layout_marginBottom="72dp"
        android:layout_above="@+id/btn_stop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btn_start"
        android:backgroundTint="#000000"
        android:textColor="#fffdfd"
        android:layout_above="@+id/btn_reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/btn_stop"
        android:layout_alignTop="@+id/btn_start"
        android:layout_alignLeft="@+id/btn_reset"
        android:layout_alignStart="@+id/btn_reset"
        android:textColor="#ffffff"
        android:backgroundTint="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btn_reset"
        android:textColor="#ffffff"
        android:backgroundTint="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lap"
        android:id="@+id/LapButton"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_alignRight="@+id/c"
        android:layout_alignEnd="@+id/c"
        android:textColor="#ffffff"
        android:backgroundTint="#000000" />

</RelativeLayout>
